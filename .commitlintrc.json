{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "body-empty": [2, "never"],
    "body-min-length": [2, "always", 40],
    "footer-empty": [2, "never"],
    "footer-min-length": [2, "always", 10]
  },
  "parserPreset": {
    "parserOpts": {
      "noteKeywords": ["BREAKING CHANGE", "BREAKING CHANGES", "BREAKING", "HU", "HUS", "FIX", "BUG", "ISSUE", "DEPRECATED"]
    }
  }
}
